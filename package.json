{
  "name": "spielbetrieb",
  "version": "1.0",
  "description": "spielbetrieb.eu webpage",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vanStaen/spielbetrieb.eu.git"
  },
  "scripts": {
    "start": "node server/index.js",
    "devfr": "webpack serve --config webpack.config.dev.js --hot --open",
    "dev": "nodemon server/index.js",
    "prebuild": "rm -rf ./build",
    "build": "webpack --config webpack.config.prod.js --mode production",
    "predeploy": "npm run build",
    "deploy": "npm i; heroku git:remote -a spielbetrieb; git push heroku master; npm run backup;",
    "postdeploy": "rm -rf ./build",
    "log": "heroku logs --tail",
    "version": "heroku --version; git --version",
    "kill": "killall -9 node",
    "backup": "cd server/lib/; node createDatabaseBackUpFile.js; npm run pushbackup; cd ../../",
    "pushbackup": "cd ../database-backups; git pull; git add -A; git commit -m 'Spielbetrieb - database backup files'; git push; cd ../spielbetrieb.eus"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "antd": "^5.6.1",
    "aws-sdk": "^2.1248.0",
    "axios": "^1.1.2",
    "bcryptjs": "^2.4.3",
    "cookie-session": "^1.4.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "graphql": "^15.3.0",
    "i18next": "^23.2.1",
    "i18next-browser-languagedetector": "^7.0.2",
    "jsonwebtoken": "^9.0.2",
    "mobx": "^6.9.0",
    "mobx-react": "^7.6.0",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "path": "^0.12.7",
    "pg": "^8.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-i18next": "^13.0.0",
    "react-router-dom": "^6.13.0",
    "regenerator-runtime": "^0.13.11",
    "sequelize": "^6.32.1",
    "sharp": "^0.32",
    "universal-cookie": "^4.0.4",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "babel-loader": "^9.1.2",
    "copy-webpack-plugin": "^11.0.0",
    "core-js": "^3.31.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.42.0",
    "forever": "^4.0.3",
    "html-webpack-plugin": "^5.5.3",
    "less": "^4.1.3",
    "less-loader": "^11.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.8.8",
    "sass": "^1.64.0",
    "sass-loader": "^13.3.2",
    "sequelize-cli": "^6.2.0",
    "style-loader": "^3.3.3",
    "webpack": "^5.87.0",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
